node("docker") {
    docker.withRegistry('narendra311777/nodeapp', 'docker') {
    
        git url: "https://github.com/couchbaselabs/restful-angularjs-nodejs", credentialsId: '<<your-git-credentials-id>>'
    
        sh "git rev-parse HEAD > .git/commit-id"
        def commit_id = readFile('.git/commit-id').trim()
        println commit_id
    
        stage "build"
        def app = docker.build "narendra311777/nodeapp"
    
        stage "publish"
        app.push 'master'
        app.push "${commit_id}"
    }
}
