pipeline {
  agent any
    
  tools {nodejs "node"}
    
  stages {
        
    stage('Cloning Git') {
      steps {
        git 'https://github.com/couchbaselabs/restful-angularjs-nodejs'
      }
    }
        
    stage('Install dependencies') {
      steps {
        sh 'npm install'
      }
    }
    stage( 'npm-start' ) {
       steps { 
          sh 'npm start'
      }
    }
    stage('Test') {
      steps {
         sh 'npm test'
      }
    }    
   
  }
}
