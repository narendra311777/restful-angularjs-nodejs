pipeline {
  agent any
    
  tools {nodejs "node"}
    
  stages {
        
    stage('Cloning Git') {
      steps {
        git 'https://github.com/couchbaselabs/restful-angularjs-nodejs'
      }
    }
        
    stage('Install dependencies') {
      steps {
        sh 'npm install'
      }
    }
    stage( 'npm-start' ) {
       steps { 
          sh 'npm start'
      }
    }
    stage('Test') {
      steps {
         sh 'npm test'
      }
    }    
   stage( 'npm-stop' ) {
       steps { 
          sh 'npm stop'
      }
    }
    stage('build-image') {
       steps {
     app = sh docker.build("narendra311777/restful-angularjs-nodejs")
     }
     }
    stage('docker-push') {
       steps {
       withDockerRegistry([ credentialsId: "docker", url: "https://registry.docker.hub.docker.com" ]) {
      // following commands will be executed within logged docker registry
      sh 'docker push narendra311777/restful-angularjs-nodejs'
   }
}
}
}
 }
